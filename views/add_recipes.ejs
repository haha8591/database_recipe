      <h1>Add Customer</h1>
      <form action="/add_recipe" method="POST" id="add-form" enctype="multipart/form-data">
        <div class="one_third first">
          <label for="name">Cake Name <span>*</span></label>
          <input type="text" name="cake_name" id = "cake_name" placeholder="Enter cake name" required /></td>
          <td><input type="hidden" name="count" value="0"  /></td>
        </div>
        <div class="one_third">
          <label for="price">Price <span>*</span></label>
          <input type="number" name="price" placeholder="Enter price"  size="22" required>
        </div>
        <div class="one_third">
          <label for="url">Star <span>*</span></label>
          <input type="number" name="star" placeholder="Enter star" size="22" required />
        </div>
        <div class="one_third first" style="margin-top: 20px;">
          <label for="discription">Description <span>*</span></label>
          <textarea name="discription"  cols="25" rows="10"></textarea>
        </div>
        <div class="one_third" style="margin-top: 20px;">
          <label for="url">Category <span>*</span></label>
          <select name="category" class="select-css">
            <option>cake</option>
            <option>cookie</option>
            <option>bite</option>
            <option>fondant</option>
            <option>bread</option>
            <option>cupcake</option>
        </select><br />
        </div>
        <div class="one_third" style="margin-top: 20px;">
          <label for="url">Website <span>*</span></label>
          <input type="text" name="website" placeholder="Enter website" size="22" required />
        </div>
        <div class="one_third" style="margin-top: 20px;">
          <label for="image">Select a Image</label>
          <input type="file" name="image" required />
        </div>
        
        <div class="one_third first" style="margin-top: 20px;">
          <input type="submit" name="submit" value="Add Cake"  />
          </br>
          <input type="reset" name="reset" value="Reset information"/>
        </div>
       </form>
