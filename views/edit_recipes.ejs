<%- include('layout/header') %>
    <div class="overlay">
        <div id="breadcrumb" class="hoc clear">
            <!-- ################################################################################################ -->
            <h6 class="heading"> Edit recipe
                <%= recipe.cake_name %>
            </h6>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="#">Edit cake</a></li>
            </ul>
            <!-- ################################################################################################ -->
        </div>
    </div>
    <!-- ################################################################################################ -->
    </div>
    <!-- End Top Background Image Wrapper -->
    <!-- ################################################################################################ -->
    <!-- ################################################################################################ -->
    <!-- ################################################################################################ -->
    <div class="wrapper row3">
        <main class="hoc container clear">
            <!-- main body -->
            <!-- ################################################################################################ -->
            <div class="content">
                <!-- ################################################################################################ -->
                <h1>:)</h1>
                <h1>Edit recipe</h1>
                <form action="/update/<%=recipe._id%>" method="POST" id="add-form" enctype="multipart/form-data">
                    <div class="scrollable">
                        <table>
                            <thead>
                                <tr>
                                    <th>Header 1</th>
                                    <th>Header 2</th>
                                    <th>Header 3</th>
                                    <th>Header 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><label for="name">Price</label></td>
                                    <td><input type="text" name="price" placeholder="Enter price" value="<%= recipe.price %>" /></td>
                                    <td><label for="category">Category</label></td>
                                    <td><input type="text" name="category" placeholder="Enter category" value="<%= recipe.category %>" /></td>
                                </tr>
                                <tr>
                                    <td><label for="cake_name">Cake_name</label></td>
                                    <td><input type="text" name="cake_name" placeholder="Enter cake name" value="<%= recipe.cake_name %>" /></td>
                                    <td><label for="discription">Description</label></td>
                                    <td><input type="text" name="discription"  value="<%= recipe.discription %>" /></td>
                                   
                                </tr>
                                <tr>
                                    <td><label for="image" class="form-label">Select Image</label></td>
                                    <td><input type="file" class="form-control for-control-lg" name="image" /></td>
                                    <img src="/<%= recipe.image %> " width="100" class="img-thumbnail mt-1">
                                    <input type="hidden" name="old_img" value="<%= recipe.image %>" />
                                    <td><input type="submit" name="submit" value="Update recipe" class="btn btn-success btn-lg" /></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </form>
 
                <!-- ################################################################################################ -->
            </div>
            <!-- ################################################################################################ -->
            <!-- / main body -->
            <div class="clear"></div>
        </main>
    </div>
    <%- include('layout/footer') %>