<%- include('layout/header') %>
<div class="overlay">
    <div id="breadcrumb" class="hoc clear"> 
      <!-- ################################################################################################ -->
      <h6 class="heading">Menu</h6>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/menu">Menu</a></li>
      </ul>
      <!-- ################################################################################################ -->
    </div>
  </div>
  <!-- ################################################################################################ -->
</div>
<div class="wrapper row3">
    <main class="hoc container clear"> 
      <!-- main body -->
      <!-- ################################################################################################ -->
      <div class="content"> 
    <% if(message){ %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message %> </strong>
        </div>
        <% } %>
            <div class="table-responsive">
                <% if (order != ''){%>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>Order_id</th>
                                <th>Sum</th>
                                <th>Account</th>
                                <th>Product</th>
                                <th>Payment</th>
                                <th>Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.forEach((row,index)=>{%>
                                <td>
                                    <%= row.order_id %>
                                </td>
                                <td>
                                    <%= row.sum %>
                                </td>
                                <td>
                                    <%= row.account %>
                                </td>
                                <td>
                                    cake:
                                    <%= row.product[0].cake %><br> price:
                                        <%= row.product[0].price %>
                                </td>
                                <td>
                                    <%= row.payment %>
                                </td>
                                <td>
                                    <%= row.remarks %>
                                </td>
                                <td>
                                    <a href="/edito<%=row._id%>" class="text-success"><i class="fas fa-edit da-lj mx-1"></i></a>
                                    <a href="/deleteo/<%=row._id%>" class="text-danger"><i class="fas fa-trash da-lj mx-1"></i></a>
                                </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                    <% }else{ %>
                        <h1 class="text-center text-secondary mt-S">No Customer found</h1>
                        <% } %>
            </div>
            <%- include('layout/footer') %>